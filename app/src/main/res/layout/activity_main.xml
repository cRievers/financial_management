<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".activities.MainActivity">


    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Controle de Gastos"
        android:textColor="@color/text_color"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:id="@+id/btnAddExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar Despesa"
        android:textColor="@color/button_text_color"
        android:background="@color/button_background"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp"/>


    <Button
        android:id="@+id/btnListExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listar Despesas"
        android:textColor="@color/button_text_color"
        android:background="@color/button_background"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnAddExpense"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp"/>


    <Button
        android:id="@+id/btnExportCSV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exportar para CSV"
        android:textColor="@color/button_text_color"
        android:background="@color/button_background"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnListExpense"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
