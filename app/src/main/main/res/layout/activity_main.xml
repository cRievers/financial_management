<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Controle de Gastos"
        android:textColor="@color/text_color"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Card de resumo -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saldo: R$ 0,00"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTotalIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Receitas: R$ 0,00"
                android:textColor="#2E7D32"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/txtTotalExpense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Despesas: R$ 0,00"
                android:textColor="#C62828"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnAddExpense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Adicionar Despesa"
        android:textColor="@color/button_text_color"
        android:background="@color/button_background"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/cardSummary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Novo botÃ£o para receita -->
    <Button
        android:id="@+id/btnAddIncome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Adicionar Receita"
        android:textColor="@color/button_text_color"
        android:background="@color/button_background"
        android:layout_marginTop="12dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnAddExpense"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnListExpense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Listar Despesas"
        android:textColor="@color/button_text_color"
        android:background="@color/button_background"
        android:layout_marginTop="12dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnAddIncome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnExportCSV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Exportar para CSV"
        android:textColor="@color/button_text_color"
        android:background="@color/button_background"
        android:layout_marginTop="12dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnListExpense"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
